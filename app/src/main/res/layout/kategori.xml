<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Kategori"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lihat_semua"
            android:layout_marginLeft="120dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Lihat Semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="100dp"
                android:background="@color/white"
                android:layout_height="100dp"
                android:padding="12dp"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_terlatis"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/terlaris"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:text="Terlaris"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="12dp"
                android:gravity="center"
                android:elevation="20dp"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_diskon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/diskon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:text="Diskon"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            app:cardCornerRadius="12dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="12dp"
                android:gravity="center"
                android:background="@color/white"
                android:elevation="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/im_flashsale"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/flashsale"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="FLash sale"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>




   </LinearLayout>





